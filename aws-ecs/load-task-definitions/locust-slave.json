{
    "family": "locust-slave",
    "containerDefinitions": [
        {
            "name": "locust-slave",
            "image": "hyperpilot/locust",
            "command": [
              "locust",
              "--slave",
              "--master=locust-master:5557",
              "-f",
              "/locust_file/locustfile.py"
            ],
            "cpu": 1024,
            "memory": 300,
            "essential": true,
            "mountPoints": [
                     {
                                 "sourceVolume": "locust_file",
                                 "containerPath": "/locust_file"
                               }
                   ]
        }
   ],
   "volumes": [
         {
                 "name": "locust_file",
                 "host": {
                           "sourcePath": "/home/ec2-user/locust_file/"
                         }
               }
       ]
}
