{
    "family": "cadvisor",
    "containerDefinitions": [
        {
            "name": "cadvisor",
            "image": "google/cadvisor",
            "cpu": 512,
            "memory": 100,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080
                }
            ],
            "essential": true,
            "command": [
                "-storage_driver=influxdb",
                "-storage_driver_user=root",
                "-storage_driver_password=hyperpilot",
                "-storage_driver_db=cadvisor",
                "-storage_driver_host=influxsrv:8086"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "root",
                    "containerPath": "/rootfs:ro",
                    "readOnly": true
                },
                {
                    "sourceVolume": "var_run",
                    "containerPath": "/var/run:rw",
                    "readOnly": false
                },
                {
                    "sourceVolume": "sys",
                    "containerPath": "/sys:ro",
                    "readOnly": true
                },
                {
                    "sourceVolume": "var_lib_docker",
                    "containerPath": "/var/lib/docker:ro",
                    "readOnly": true
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "root",
            "host": {
                "sourcePath": "/"
            }
        },
        {
            "name": "var_run",
            "host": {
                "sourcePath": "/var/run"
            }
        },
        {
            "name": "sys",
            "host": {
                "sourcePath": "/sys"
            }
        },
        {
            "name": "var_lib_docker",
            "host": {
                "sourcePath": "/var/lib/docker/"
            }
        }
    ]
}
