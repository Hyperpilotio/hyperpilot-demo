{
    "name": "ardb",
    "region": "us-west1-a",
    "clusterType": "GCP",
    "nodeMapping": [{
            "task": "snap",
            "id": 1
        },
        {
            "task": "snap",
            "id": 2
        },
        {
            "task": "benchmark-agent",
            "id": 1
        },
        {
            "task": "benchmark-agent",
            "id": 2
        },
        {
            "task": "ardb-serve",
            "id": 1
        },
        {
            "task": "ardb-benchmarks",
            "id": 2
        },
        {
            "task": "influxsrv",
            "id": 3
        }
    ],
    "clusterDefinition": {
        "nodes": [{
                "instanceType": "n1-standard-4",
                "id": 1
            },
            {
                "instanceType": "n1-standard-4",
                "id": 2
            },
            {
                "instanceType": "n1-standard-4",
                "id": 3
            }
        ]
    },
    "kubernetes": {
        "secrets": [{
            "apiVersion": "v1",
            "kind": "Secret",
            "metadata": {
                "name": "myregistrykey",
                "namespace": "hyperpilot"
            },
            "type": "kubernetes.io\/dockerconfigjson",
            "data": {
                ".dockerconfigjson": "ewoJImF1dGhzIjogewoJCSJodHRwczovL2luZGV4LmRvY2tlci5pby92MS8iOiB7CgkJCSJhdXRoIjogImFIbHdaWEp3YVd4dmRIVnpaWEk2YUhsd1pYSXhNak09IgoJCX0KCX0KfQ=="
            }
        }],
        "taskDefinitions": [{
                "daemonset": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "DaemonSet",
                    "metadata": {
                        "name": "controller-daemonset",
                        "namespace": "hyperpilot"
                    },
                    "spec": {
                        "template": {
                            "metadata": {
                                "labels": {
                                    "name": "controller-daemonset"
                                }
                            },
                            "spec": {
                                "containers": [{
                                    "image": "hyperpilot\/controller",
                                    "imagePullPolicy": "Always",
                                    "name": "controller",
                                    "securityContext": {
                                        "privileged": true
                                    },
                                    "volumeMounts": [{
                                            "mountPath": "\/var\/run\/docker.sock",
                                            "name": "docker-sock"
                                        },
                                        {
                                            "mountPath": "\/var\/run\/command.sock",
                                            "name": "command-sock"
                                        },
                                        {
                                            "mountPath": "\/sys\/fs\/cgroup",
                                            "name": "cgroup"
                                        }
                                    ],
                                    "env": [{
                                        "name": "MY_NODE_NAME",
                                        "valueFrom": {
                                            "fieldRef": {
                                                "fieldPath": "spec.nodeName"
                                            }
                                        }
                                    }]
                                }],
                                "volumes": [{
                                        "hostPath": {
                                            "path": "\/var\/run\/docker.sock"
                                        },
                                        "name": "docker-sock"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/run\/command.sock"
                                        },
                                        "name": "command-sock"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/sys\/fs\/cgroup"
                                        },
                                        "name": "cgroup"
                                    }
                                ],
                                "imagePullSecrets": [{
                                    "name": "myregistrykey"
                                }],
                                "terminationGracePeriodSeconds": 10
                            }
                        }
                    }
                }
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "snap",
                            "version": "latest"
                        },
                        "name": "snap",
                        "namespace": "hyperpilot"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "snap",
                                "version": "latest"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "snap",
                                    "version": "latest"
                                }
                            },
                            "spec": {
                                "containers": [{
                                    "image": "hyperpilot\/snap:xenial",
                                    "name": "snap",
                                    "command": [
                                        "\/usr\/local\/bin\/run.sh"
                                    ],
                                    "args": [
                                        "https:\/\/s3.amazonaws.com\/hyperpilot-tech-demo-snap\/init-k8s.json"
                                    ],
                                    "resources": {
                                        "limits": {
                                            "cpu": "1000m",
                                            "memory": "2048Mi"
                                        }
                                    },
                                    "imagePullPolicy": "Always",
                                    "securityContext": {
                                        "privileged": true
                                    },
                                    "volumeMounts": [{
                                            "mountPath": "\/var\/run",
                                            "name": "var-run"
                                        },
                                        {
                                            "mountPath": "\/var\/log",
                                            "name": "var-log"
                                        },
                                        {
                                            "mountPath": "\/sys\/fs\/cgroup",
                                            "name": "cgroup"
                                        },
                                        {
                                            "mountPath": "\/var\/lib\/docker",
                                            "name": "var-lib-docker"
                                        },
                                        {
                                            "mountPath": "\/usr\/local\/bin\/docker",
                                            "name": "usr-bin-docker"
                                        }
                                    ],
                                    "env": [{
                                            "name": "NODE_NAME",
                                            "valueFrom": {
                                                "fieldRef": {
                                                    "fieldPath": "spec.nodeName"
                                                }
                                            }
                                        },
                                        {
                                            "name": "SNAP_LOG_LEVEL",
                                            "value": "1"
                                        }
                                    ]
                                }],
                                "hostNetwork": true,
                                "hostPID": true,
                                "volumes": [{
                                        "hostPath": {
                                            "path": "\/sys\/fs\/cgroup"
                                        },
                                        "name": "cgroup"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/lib\/docker\/"
                                        },
                                        "name": "var-lib-docker"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/log"
                                        },
                                        "name": "var-log"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/run"
                                        },
                                        "name": "var-run"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/usr\/bin\/docker"
                                        },
                                        "name": "usr-bin-docker"
                                    }
                                ]
                            }
                        }
                    }
                },
                "family": "snap"
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "influxsrv"
                        },
                        "name": "influxsrv",
                        "namespace": "hyperpilot"
                    },
                    "spec": {
                        "replicas": 1,
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "influxsrv"
                                }
                            },
                            "spec": {
                                "hostname": "influxsrv",
                                "volumes": [{
                                    "hostPath": {
                                        "path": "~\/influx_data"
                                    },
                                    "name": "influx-data"
                                }],
                                "containers": [{
                                    "env": [{
                                            "name": "ADMIN_USER",
                                            "value": "root"
                                        },
                                        {
                                            "name": "PRE_CREATE_DB",
                                            "value": "snap;spark;snapaverage"
                                        },
                                        {
                                            "name": "INFLUXDB_INIT_PWD",
                                            "value": "default"
                                        }
                                    ],
                                    "image": "hyperpilot\/influx:1.3.6",
                                    "name": "influxsrv",
                                    "ports": [{
                                            "containerPort": 8083,
                                            "hostPort": 8083,
                                            "protocol": "TCP"
                                        },
                                        {
                                            "containerPort": 8086,
                                            "hostPort": 8086,
                                            "protocol": "TCP"
                                        },
                                        {
                                            "containerPort": 8088,
                                            "hostPort": 8088,
                                            "protocol": "TCP"
                                        }
                                    ],
                                    "volumeMounts": [{
                                        "mountPath": "\/var\/lib\/influxdb",
                                        "name": "influx-data"
                                    }],
                                    "resources": {
                                        "requests": {
                                            "cpu": "2000m",
                                            "memory": "4096Mi"
                                        }
                                    }
                                }]
                            }
                        }
                    }
                },
                "family": "influxsrv",
                "portTypes": [
                    1,
                    1,
                    1
                ]
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "benchmark-agent"
                        },
                        "name": "benchmark-agent"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "benchmark-agent"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "benchmark-agent"
                                }
                            },
                            "spec": {
                                "hostname": "benchmark-agent",
                                "containers": [{
                                    "image": "hyperpilot\/benchmark-agent",
                                    "name": "benchmark-agent",
                                    "ports": [{
                                        "containerPort": 7778,
                                        "hostPort": 7778,
                                        "protocol": "TCP"
                                    }],
                                    "resources": {
                                        "requests": {
                                            "cpu": "500m",
                                            "memory": "512Mi"
                                        },
                                        "limits": {
                                            "cpu": "500m",
                                            "memory": "512Mi"
                                        }
                                    },
                                    "volumeMounts": [{
                                        "mountPath": "\/var\/run\/docker.sock",
                                        "name": "docker-sock"
                                    }]
                                }],
                                "volumes": [{
                                    "hostPath": {
                                        "path": "\/var\/run\/docker.sock"
                                    },
                                    "name": "docker-sock"
                                }]
                            }
                        }
                    }
                },
                "portTypes": [
                    1
                ],
                "family": "benchmark-agent"
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "ardb-serve"
                        },
                        "name": "ardb-serve"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "ardb-serve"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "ardb-serve"
                                }
                            },
                            "spec": {
                                "hostname": "ardb-serve",
                                "containers": [{
                                    "imagePullPolicy": "Always",
                                    "image": "hyperpilot\/ardb:dev",
                                    "name": "ardb-serve",
                                    "ports": [{
                                        "containerPort": 16379,
                                        "hostPort": 16379,
                                        "protocol": "TCP"
                                    }],
                                    "resources": {
                                        "requests": {}
                                    }
                                }]
                            }
                        }
                    }
                },
                "portTypes": [
                    1
                ],
                "family": "ardb-serve"
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "ardb-benchmarks"
                        },
                        "name": "ardb-benchmarks",
                        "namespace": "hyperpilot"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "ardb-benchmarks"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "ardb-benchmarks"
                                }
                            },
                            "spec": {
                                "containers": [{
                                    "image": "hyperpilot\/ardb-benchmarks",
                                    "name": "ardb-benchmarks",
                                    "imagePullPolicy": "Always",
                                    "resources": {}
                                }]
                            }
                        }
                    }
                },
                "family": "ardb-benchmarks"
            }
        ]
    }
}
