{
    "name": "mongo",
    "serviceNames": ["mongo"],
    "loadTester": {
        "name": "mongo-bench",
        "benchmarkController": {
            "command": {
                "path": "python",
                "args": [
                    "/app/mongo-perf/benchrun.py",
                    "-f",
                    "/app/mongo-perf/testcases/simple_insert.js", //TODO: find a testcase
                    "--host",
                    "mongo-serve",
                    "--port",
                    "27017",
                ],
                "intensityArgs": [
                    {
                        "name": "Number of connections",
                        "arg": "-t",
                        "startingValue": 1,
                        "step": 2
                    }
                ]
            }
        }
    },
    "type": "long-running",
    "slo": {
        "metric": "Insert.Empty", //TODO: find a testcase
        "value": 5000, //TODO: find a value.
        "type": "throughput"
    }
}
