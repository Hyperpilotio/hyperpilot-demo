{
    "name": "mongo-monitoring",
    "region": "us-east-1",
    "nodeMapping": [
        {
            "task": "mongo-bench",
            "id": 1
        },
        {   
            "task": "influxsrv",
            "id": 1
        },
        {
            "task": "benchmark-agent",
            "id": 2
        },
        {
            "task": "mongo-serve",
            "id": 2
        },
        {
            "task": "snap-mongo",
            "id": 2
        }

    ],
    "clusterDefinition": {
        "nodes": [
            {
                "instanceType": "t2.large",
                "id": 1
            },
            {
                "instanceType": "t2.large",
                "id": 2
            }
        ]
    },
    "kubernetes": {
        "secrets": [
            {
                "apiVersion": "v1",
                "kind": "Secret",
                "metadata": {
                    "name": "myregistrykey"
                },
                "type": "kubernetes.io/dockerconfigjson",
                "data": {
                    ".dockerconfigjson": "ewoJImF1dGhzIjogewoJCSJodHRwczovL2luZGV4LmRvY2tlci5pby92MS8iOiB7CgkJCSJhdXRoIjogImFIbHdaWEp3YVd4dmRIVnpaWEk2YUhsd1pYSXhNak09IgoJCX0KCX0KfQ=="
                }
            }
        ],
        "taskDefinitions": [
            {
                "deployment": {
                    "apiVersion": "extensions/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "mongo-serve"
                        },
                        "name": "mongo-serve"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "mongo-serve"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "mongo-serve"
                                }
                            },
                            "spec": {
                                "volumes": [
                                    {
                                        "hostPath": {
                                            "path": "\/home\/ubuntu\/mongo_data"
                                        },
                                        "name": "mongo-data"
                                    }
                                ],
                                "hostname": "mongo-serve",
                                "containers": [
                                    {
                                        "volumeMounts": [
                                            {
                                                "mountPath": "\/data\/db",
                                                "name": "mongo-data"
                                            }
                                        ],
                                        "image": "mongo:3.0.15",
                                        "name": "mongo-serve",
                                        "ports": [
                                            {
                                                "containerPort": 27017,
                                                "hostPort": 27017,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "resources": {
                                            "requests": {
                                                "cpu": "512.0m",
                                                "memory": "1024Mi"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "portTypes": [
                    1
                ],
                "family": "mongo-serve"
            },
            {
                "deployment": {
                    "apiVersion": "extensions/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "benchmark-agent"
                        },
                        "name": "benchmark-agent"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "benchmark-agent"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "benchmark-agent"
                                }
                            },
                            "spec": {
                                "hostname": "benchmark-agent",
                                "containers": [
                                    {
                                        "image": "hyperpilot/benchmark-agent",
                                        "name": "benchmark-agent",
                                        "ports": [
                                            {
                                                "containerPort": 7778,
                                                "hostPort": 7778,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "resources": {
                                            "limits": {
                                                "cpu": "1024.0m",
                                                "memory": "500Mi"
                                            }
                                        },
                                        "volumeMounts": [
                                            {
                                                "mountPath": "/var/run/docker.sock",
                                                "name": "docker-sock"
                                            }
                                        ]
                                    }
                                ],
                                "volumes": [
                                    {
                                        "hostPath": {
                                            "path": "/var/run/docker.sock"
                                        },
                                        "name": "docker-sock"
                                    }
                                ]
                            }
                        }
                    }
                },
                "portTypes": [
                    1
                ],
                "family": "benchmark-agent"
            },
            {
                "deployment": {
                    "apiVersion": "extensions/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "mongo-bench"
                        },
                        "name": "mongo-bench"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "mongo-bench"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "mongo-bench"
                                }
                            },
                            "spec": {
                                "imagePullSecrets": [
                                    {
                                        "name": "myregistrykey"
                                    }
                                ],
                                "containers": [
                                    {
                                        "image": "hyperpilot/benchmark-controller:mongo",
                                        "name": "mongo-bench",
                                        "imagePullPolicy": "Always",
                                        "ports": [
                                            {
                                                "containerPort": 6001,
                                                "hostPort": 6001,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "resources": {
                                            "requests": {
                                                "cpu": "512.0m",
                                                "memory": "1024Mi"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "portTypes": [
                    1
                ],
                "family": "mongo-bench"
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "snap-mongo",
                            "version": "latest"
                        },
                        "name": "snap-mongo"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "snap-mongo",
                                "version": "latest"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "snap-mongo",
                                    "version": "latest"
                                }
                            },
                            "spec": {
                                "containers": [
                                    {
                                        "image": "hyperpilot\/snap:alpine-init",
                                        "name": "snap-mongo",
                                        "command": [
                                            "\/usr\/local\/bin\/run.sh"
                                        ],
                                        "args": [
                                            "https:\/\/hyperpilot-snap-alpha.s3.amazonaws.com\/snap-mongo-init.json"
                                        ],
                                        "resources": {
                                        },
                                        "imagePullPolicy": "Always",
                                        "securityContext": {
                                            "privileged": true
                                        },
                                        "volumeMounts": [
                                            {
                                                "mountPath": "\/var\/run",
                                                "name": "var-run"
                                            },
                                            {
                                                "mountPath": "\/var\/log",
                                                "name": "var-log"
                                            },
                                            {
                                                "mountPath": "\/sys\/fs\/cgroup",
                                                "name": "cgroup"
                                            },
                                            {
                                                "mountPath": "\/var\/lib\/docker",
                                                "name": "var-lib-docker"
                                            },
                                            {
                                                "mountPath": "\/usr\/local\/bin\/docker",
                                                "name": "usr-bin-docker"
                                            },
                                            {
                                                "mountPath": "\/proc_host",
                                                "name": "proc"
                                            }
                                        ],
                                        "env": [
                                            {
                                                "name": "NODE_NAME",
                                                "valueFrom": {
                                                    "fieldRef": {
                                                        "fieldPath": "spec.nodeName"
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ],
                                "volumes": [
                                    {
                                        "hostPath": {
                                            "path": "\/sys\/fs\/cgroup"
                                        },
                                        "name": "cgroup"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/lib\/docker\/"
                                        },
                                        "name": "var-lib-docker"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/log"
                                        },
                                        "name": "var-log"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/var\/run"
                                        },
                                        "name": "var-run"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/usr\/bin\/docker"
                                        },
                                        "name": "usr-bin-docker"
                                    },
                                    {
                                        "hostPath": {
                                            "path": "\/proc"
                                        },
                                        "name": "proc"
                                    }
                                ]
                            }
                        }
                    }
                },
                "family": "snap-mongo"
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "influxsrv"
                        },
                        "name": "influxsrv"
                    },
                    "spec": {
                        "replicas": 1,
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "influxsrv"
                                }
                            },
                            "spec": {
                                "hostname": "influxsrv",
                                "volumes": [
                                    {
                                        "hostPath": {
                                            "path": "\/home\/ubuntu\/influx_data"
                                        },
                                        "name": "influx-data"
                                    }
                                ],
                                "containers": [
                                    {
                                        "env": [
                                            {
                                                "name": "ADMIN_USER",
                                                "value": "root"
                                            },
                                            {
                                                "name": "PRE_CREATE_DB",
                                                "value": "snap;spark"
                                            },
                                            {
                                                "name": "INFLUXDB_INIT_PWD",
                                                "value": "default"
                                            }
                                        ],
                                        "image": "hyperpilot\/influx:1.2.2",
                                        "name": "influxsrv",
                                        "ports": [
                                            {
                                                "containerPort": 8083,
                                                "hostPort": 8083,
                                                "protocol": "TCP"
                                            },
                                            {
                                                "containerPort": 8086,
                                                "hostPort": 8086,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "volumeMounts": [
                                            {
                                                "mountPath": "\/var\/lib\/influxdb",
                                                "name": "influx-data"
                                            }
                                        ],
                                        "resources": {
                                            "requests": {
                                                "cpu": "512.0m",
                                                "memory": "1024Mi"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "family": "influxsrv",
                "portTypes": [
                    1,
                    1
                ]
            }
        ]
    }
}
