{
    "name": "redis",
    "serviceNames": ["redis-serve"],
    "loadTester": {
        "name": "redis-bench",
        "benchmarkController": {
            "initialize": {
                "image": "redis:3-alpine",
                "path": "redis-cli",
                "args": [
                    "flushall"
                ],
                "hostConfig": {
                    "arg": "-h",
                    "description": "host of the service"
                },
                "portConfig": {
                    "arg": "-p",
                    "description": "port of the service"
                }
            },
            "command": {
                "image": "redis:3-alpine",
                "path": "redis-benchmark",
                "args": [
                    "--csv",
                    "-n",
                    "10",
                    "-t",
                    "GET"
                ],
                "hostConfig": {
                    "arg": "-h",
                    "description": "host of the service"
                },
                "portConfig": {
                    "arg": "-p",
                    "description": "port of the service"
                },
                "intensityArgs": [
                    {
                        "name": "Number of connections",
                        "arg": "-c",
                        "startingValue": 5,
                        "step": 3
                    }
                ]
            }
        }
    },
    "type": "long-running",
    "slo": {
        "metric": "GET",
        "value": 35000,
        "type": "throughput"
    }
}
