{
    "name": "rubis",
    "region": "us-east-1",
    "nodeMapping": [
        {
            "task": "rubis",
            "id": 1
        },
        {
            "task": "rubis-client",
            "id": 2
        }
    ],
    "clusterDefinition": {
        "nodes": [
            {
                "instanceType": "t2.medium",
                "id": 1
            },
            {
                "instanceType": "t2.medium",
                "id": 2
            }
        ]
    },
    "kubernetes": {
        "secrets": [
            {
                "apiVersion": "v1",
                "kind": "Secret",
                "metadata": {
                    "name": "myregistrykey"
                },
                "type": "kubernetes.io\/dockerconfigjson",
                "data": {
                    ".dockerconfigjson": "ewoJImF1dGhzIjogewoJCSJodHRwczovL2luZGV4LmRvY2tlci5pby92MS8iOiB7CgkJCSJhdXRoIjogImFIbHdaWEp3YVd4dmRIVnpaWEk2YUhsd1pYSXhNak09IgoJCX0KCX0KfQ=="
                }
            }
        ],
        "taskDefinitions": [
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "rubis"
                        },
                        "name": "rubis"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "rubis"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "rubis"
                                }
                            },
                            "spec": {
                                "hostname": "rubis",
                                "containers": [
                                    {
                                        "imagePullPolicy": "Always",
                                        "image": "hyperpilot\/rubis",
                                        "name": "rubis",
                                        "ports": [
                                            {
                                                "containerPort": 8080,
                                                "hostPort": 8080,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "resources": {
                                            "limits": {
                                                "cpu": "1024.0m",
                                                "memory": "2048Mi"
                                            }
                                        },
                                        "volumeMounts": [
                                            {
                                                "mountPath": "\/var\/run\/docker.sock",
                                                "name": "docker-sock"
                                            }
                                        ]
                                    }
                                ],
                                "volumes": [
                                    {
                                        "hostPath": {
                                            "path": "\/var\/run\/docker.sock"
                                        },
                                        "name": "docker-sock"
                                    }
                                ]
                            }
                        }
                    }
                },
                "portTypes": [
                    1
                ],
                "family": "rubis"
            },
            {
                "deployment": {
                    "apiVersion": "extensions\/v1beta1",
                    "kind": "Deployment",
                    "metadata": {
                        "labels": {
                            "app": "rubis-client"
                        },
                        "name": "rubis-client"
                    },
                    "spec": {
                        "replicas": 1,
                        "selector": {
                            "matchLabels": {
                                "app": "rubis-client"
                            }
                        },
                        "template": {
                            "metadata": {
                                "labels": {
                                    "app": "rubis-client"
                                }
                            },
                            "spec": {
                                "hostname": "rubis-client",
                                "containers": [
                                    {
                                        "imagePullPolicy": "Always",
                                        "image": "hyperpilot\/rubisclient",
                                        "name": "rubis-client",
                                        "ports": [
                                            {
                                                "containerPort": 9980,
                                                "hostPort": 9980,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "resources": {
                                            "limits": {
                                                "cpu": "1024.0m",
                                                "memory": "2048Mi"
                                            }
                                        },
                                        "volumeMounts": [
                                            {
                                                "mountPath": "\/var\/run\/docker.sock",
                                                "name": "docker-sock"
                                            }
                                        ]
                                    }
                                ],
                                "volumes": [
                                    {
                                        "hostPath": {
                                            "path": "\/var\/run\/docker.sock"
                                        },
                                        "name": "docker-sock"
                                    }
                                ]
                            }
                        }
                    }
                },
                "portTypes": [
                    1
                ],
                "family": "rubis-client"
            }

        ],
        "skipdDeleteOnFailure": true
    }
}
