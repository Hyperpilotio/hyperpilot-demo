{
    "version": 1,
    "schedule": {
        "type": "simple",
        "interval": "5s"
    },
    "max-failures": -1,
    "workflow": {
        "collect": {
            "metrics": {
                "/intel/procfs/meminfo/*": {}
            },
            "config": {
                "/intel/procfs": {
                    "proc_path": "/proc_host"
                }
            },
            "tags": {
                "/intel": {
                    "nodename": "<%= NODE_NAME =>",
                    "deploymentId": "<%= DEPLOYMENT_ID =>"
                }
            },
            "process": [
                {
                    "plugin_name": "snap-average-counter-processor",
                    "config": {
                        "collect.namespaces": "default",
                        "collect.include_empty_namespace": true,
                        "collect.exclude_metrics": "*",
                        "collect.exclude_metrics.except": "*perc",
                        "average": ""
                    },
                    "publish": [
                        {
                            "plugin_name": "influxdb",
                            "config": {
                                "host": "<%= INFLUXSRV_SERVICE_HOST =>",
                                "port": 8086,
                                "database": "snapaverage",
                                "user": "root",
                                "password": "default",
                                "https": false,
                                "skip-verify": false
                            }
                        }
                    ]
                }
            ]
        }
    }
}
